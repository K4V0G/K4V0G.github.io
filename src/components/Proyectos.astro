---
// Lista de proyectos (puedes editarla libremente)
const projects = [
	{
		title: 'K4V0G Community Site',
		description:
			'Sitio web de la comunidad construido con Astro y Tailwind. Despliegue estático y animaciones suaves.',
		tags: ['Astro', 'Tailwind', 'Vercel'],
		repo: 'https://github.com/K4V0G/K4V0G.github.io',
		demo: 'https://k4v0g.github.io/',
	},
	{
		title: 'CTF Toolkit',
		description:
			'Colección de herramientas y scripts para desafíos CTF: enumeración, explotación y post-explotación.',
		tags: ['Python', 'Bash', 'Security'],
		repo: '#',
		demo: ''
	},
	{
		title: 'API Starter',
		description:
			'Plantilla de API rápida y segura con autenticación JWT y logging estructurado.',
		tags: ['Node.js', 'Express', 'JWT'],
		repo: '#',
		demo: ''
	},
];
---

<section id="proyectos" class="relative pt-12 pb-20 px-4 bg-transparent">
	<div class="max-w-6xl mx-auto">
		<!-- Título -->
		<div class="text-center mb-12">
			<h2 class="text-4xl md:text-5xl font-bold text-white">
				Nuestros <span class="text-cyan-400">Proyectos</span>
			</h2>
			<p class="text-zinc-400 text-md sm:text-lg mt-3 max-w-3xl mx-auto">
				Una selección de lo que construimos: herramientas, plantillas y productos que impulsan a la comunidad.
			</p>
		</div>

		<!-- Grid de proyectos -->
	<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
			{projects.map((p) => (
				<article class="group rounded-xl p-6 bg-white/5 backdrop-blur-sm border border-white/10 hover:border-cyan-400/50 transition-all duration-300 hover:translate-y-[-2px] hover:shadow-[0_0_40px_-10px_rgba(34,211,238,0.35)]">
					<div class="flex items-start justify-between gap-4">
						<h3 class="text-white text-xl font-semibold leading-tight group-hover:text-cyan-300 transition-colors">{p.title}</h3>
						<div class="h-8 w-8 rounded-md bg-gradient-to-br from-cyan-500/30 to-sky-500/30 border border-cyan-400/30 flex items-center justify-center text-cyan-300">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
							</svg>
						</div>
					</div>

					<p class="text-zinc-300 text-sm mt-3">{p.description}</p>

					<!-- Tags -->
					<div class="mt-4 flex flex-wrap gap-2">
						{p.tags.map((t) => (
							<span class="px-3 py-1 rounded-full text-xs bg-cyan-500/10 text-cyan-300 border border-cyan-400/20">{t}</span>
						))}
					</div>

					<!-- Acciones -->
					<div class="mt-6 flex flex-wrap gap-3">
						<a href={p.repo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-md border border-cyan-400/40 text-white px-4 py-2 text-sm hover:bg-cyan-500/10 transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-cyan-300">
								<path d="M12 .5a12 12 0 0 0-3.79 23.4c.6.11.82-.26.82-.58v-2.03c-3.34.73-4.04-1.61-4.04-1.61-.55-1.39-1.34-1.76-1.34-1.76-1.09-.74.08-.73.08-.73 1.2.09 1.83 1.23 1.83 1.23 1.07 1.83 2.8 1.3 3.48.99.11-.78.42-1.3.76-1.6-2.67-.3-5.47-1.34-5.47-5.96 0-1.32.47-2.4 1.23-3.25-.12-.3-.53-1.52.12-3.17 0 0 1-.32 3.3 1.24a11.5 11.5 0 0 1 6 0c2.3-1.56 3.3-1.24 3.3-1.24.65 1.65.24 2.87.12 3.17.76.85 1.23 1.93 1.23 3.25 0 4.63-2.8 5.65-5.48 5.95.43.37.81 1.1.81 2.22v3.29c0 .32.22.7.83.58A12 12 0 0 0 12 .5Z" />
							</svg>
							Ver repo
						</a>

						{p.demo && (
							<a href={p.demo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-md px-4 py-2 text-sm text-white bg-gradient-to-r from-cyan-500 to-sky-500 hover:from-cyan-400 hover:to-sky-400 transition-colors">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-4 h-4">
									<path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
								</svg>
								Ver demo
							</a>
						)}
					</div>
				</article>
			))}
		</div>
	</div>
</section>
